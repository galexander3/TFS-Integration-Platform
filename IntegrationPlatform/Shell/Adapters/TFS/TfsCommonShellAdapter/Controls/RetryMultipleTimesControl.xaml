<UserControl x:Class="Microsoft.TeamFoundation.Migration.Shell.TfsCommonShellAdapter.RetryMultipleTimesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Number of times to retry for new conflicts: " />
        <ComboBox x:Name="numRetryComboBox" Grid.Column="1" ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedOption}" />
    </Grid>
</UserControl>
